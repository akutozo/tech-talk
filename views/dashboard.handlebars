<section>
  <h2>Create New article</h2>

  <form class="new-article-form">
    <div>
      <label for="article-title">Title</label>
      <input type="text" id="article-title" name="article-title" />
    </div>
    <div>
      <label for="article-text">Article Commentary</label>
      <textarea id="article-text" name="article-text" rows="10" cols="50"></textarea>
    </div>
    <button type="submit" class="btn">Create</button>
  </form>
</section>


{{#if articles.length}}
<section>
  <h2>Your Articles</h2>
  <ol>
    {{#each articles as |article|}}
    <ol>
      {{> article-info article}}
      <a href="/dashboard/edit/{{article.id}}" class="edit-link">Edit article</a>
    </ol>
    {{/each}}
  </ol>
</section>
{{/if}}

<script src="/javascript/add-article.js"></script>